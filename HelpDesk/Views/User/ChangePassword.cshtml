@model Domain.Dtos.ChangePassDto

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Password</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <span class="alert-danger">@TempData["ErrorMessage"]</span>
    </div>
    <div class="col-md-4"></div>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.CurrentPass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.CurrentPass, new { htmlAttributes = new { @class = "form-control",@type = "password"  } })
            @Html.ValidationMessageFor(model => model.CurrentPass, "", new { @class = "text-danger" })
        </div>
    </div>
     <div class="form-group">
        @Html.LabelFor(model => model.NewPass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.NewPass, new { htmlAttributes = new { @class = "form-control",@type = "password"  } })
            @Html.ValidationMessageFor(model => model.NewPass, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ReNewPass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.ReNewPass, new { htmlAttributes = new { @class = "form-control",@type = "password"  } })
            @Html.ValidationMessageFor(model => model.ReNewPass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group ">
        <input type="submit" value="Change Password" />
    </div>
}
